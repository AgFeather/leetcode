//将一个十进制实数转换为7进制（注意正负号）

class Solution {
    public String convertToBase7(int num) {
        if (num == 0) {
			return "0";
		}
        StringBuffer res = new StringBuffer();
		int numTemp = Math.abs(num);
		while(numTemp>0){
			int temp = numTemp%7;
			res.append(Integer.toString(temp));
			numTemp /= 7;
		}
		if (num<0) {
			res.append("-");
		}
		res.reverse();
		return res.toString();
    }
}


//递归方法
	public String convertToBase7(int num){
		if (num<0) 
			return '-' + convertToBase7(-num);
		if (num<7) 
			return num + "";
		return convertToBase7(num/7) + num%7;
	}
